<%= simple_form_for @customer, :defaults =>{:input_html => {:class => 'span10'}} do |f| %>
  <div class="container"> 
    <div class="form-inputs">
      <div class="row-fluid">
  <%= f.error_notification %>
  <div class="span6">
    <%= f.input :name, :label=> t('name'),  :required=> true, :autofocus=>true %>
    <%= f.input :lastname,:label=> 'Last Name',  :required=> true, :hint => 'no special characteres' %>
    <%= f.input :address,:label=> 'Address',  :required=> true %>
    <%= f.input :neighborhood, :label=> 'Neighborhood'%>
    <%= f.input :reference_direction, :label=> 'reference direction'%>
    <%= f.input :email, :label=> 'email', placeholder: 'user@domain.com'%>
    <%= f.input :dni, :label=> 'dni'%>
    <div class="fields">
    <%= f.simple_fields_for :phones do |ph| %>
       <%=render 'phones', f: ph  %>
     <% end %>
    <%= link_to_add_fields "Add Phones", f , :phones %>
  </div>
  </div>

  <div class="span6">
   <%= f.input :location_id do %>
     <%= f.select :location_id,  Location.all.map {|l|[l.name, l.id]}, prompt: "Seleccione una Localidad" %>
   <% end  %>
   <%= f.input :plans_id do %>
     <%= f.select :plans_id,  Plan.all.map {|p|[p.name + " - " + p.download_speed , p.id]}, prompt: "Seleccione un Plan" %>
   <% end  %>
  
   <%= f.input :description, :label=> 'description', :input_html => {:rows => 5}%>
    <%= f.input :cuit, :label=> 'cuit'%>
    <%= f.input :date_of_birth, start_year: Date.today.year - 90, order: [:day, :month, :year], :input_html =>{:width => '100px', :class => 'span2'}%>
    <%= f.input :removed %>
    <%= f.input :category, :label=> 'Category'%>
   </div>
</div>
</div>
</div>
<div class="form-actions">
    <%= f.submit 'Save', :class => 'btn btn-primary' %>
  </div>
<% end %>
