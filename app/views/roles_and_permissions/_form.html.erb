    <div id="error_explanation">
      <h2><%= pluralize(@roles_and_permission.errors.count, "error") %> prohibited this roles_and_permission from being saved:</h2>
      <ul>
      <% @roles_and_permission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
