<% if flash[:error] %>
  <li class="alert alert-error"><%= flash[:error]  %></li>
  <% end %>
<% if notice %>
  <li class="alert alert-success"><%= notice  %></li>
  <% end %>
  
<h1><%= t('roles.listing.title') %></h1>
  <table class="table">
  <tr>
    <th><%= Role.human_attribute_name('name') %></th>
    <th><%= Role.human_attribute_name('permission') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.role %></td>
    <td><%= link_to t('view.role.permission'), new_role_roles_and_permission_path(role.id) %></td>
    <td><%= link_to t('labels.show'), role %></td>
    <td><%= link_to t('labels.edit'), edit_role_path(role) %></td>
    <td><%= link_to t('labels.destroy'), role, method: :delete, data: { confirm: t('labels.are_you_sure') } %></td>
  </tr>
<% end %>
</table>

