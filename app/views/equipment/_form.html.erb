<%= simple_form_for(@equipment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    
    <%= f.input :mac %>
    <%=f.select :status , Equipment::STATUS  %>
    <%= f.input :comment, :input_html => {:rows => 5}%>

   <%= f.input :model_id do %>
     <%= f.select :model_id,  Model.order('name').map {|l|[l.name, l.id]}, prompt: "Seleccione un Modelo" %>
   <% end  %>

   <%= f.input :supplier_id do %>
     <%= f.select :supplier_id,  Supplier.order('name').map {|l|[l.name, l.id]}, prompt: "Seleccione un Proveedor" %>
   <% end  %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
