<!DOCTYPE html>
<html>
<head>
  <title>IspWeb</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
  <%if user_signed_in?%>
          <%= render "layouts/menu" %>
          <div class="container">
            <%= yield %>
          </div>
          <%= render "layouts/footer" %>
        <% else %>
       
          <div class="container">
            <%= yield %>
          </div>
        <% end %>

        
</body>
</html>
