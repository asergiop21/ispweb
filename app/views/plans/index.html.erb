<h1><%= t'plans.listing.title' %></h1>

<table class="table">
  <tr>
    <th><%= Plan.human_attribute_name(:name) %></th>
    <th><%= Plan.human_attribute_name(:price) %></th>
    <th><%= Plan.human_attribute_name(:upload_speed) %></th>
    <th><%= Plan.human_attribute_name(:download_speed) %></th>
    <th><%= Plan.human_attribute_name(:remove) %></th>
    <th><%= Plan.human_attribute_name(:price_surcharges1) %></th>
    <th><%= Plan.human_attribute_name(:price_surcharges2) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plans.each do |plan| %>
  <tr>
    <td><%= plan.name %></td>
    <td><%= plan.price %></td>
    <td><%= plan.upload_speed %></td>
    <td><%= plan.download_speed %></td>
    <td><%= plan.remove %></td>
    <td><%= plan.price_surcharges1 %></td>
    <td><%= plan.price_surcharges2 %></td>
    <td><%= link_to t('labels.show'), plan %></td>
    <td><%= link_to t('labels.edit'), edit_plan_path(plan) %></td>
    <td><%= link_to t('labels.destroy'), plan, method: :delete, data: { confirm: t('labels.are_you_sure') } %></td>
  </tr>
<% end %>
</table>
<br />

