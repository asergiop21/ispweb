<% @plans.each do |plan| %>
  <tr>
    <td><%= plan.name %></td>
    <td><%= plan.price %></td>
    <td><%= plan.upload_speed %></td>
    <td><%= plan.download_speed %></td>
    <td><%= plan.remove %></td>
    <td><%= plan.price_surcharges1 %></td>
    <td><%= plan.price_surcharges2 %></td>
    <td><%= link_to 'Show', plan %></td>
    <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
    <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
