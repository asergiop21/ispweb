<%= simple_form_for(@plan) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :upload_speed %>
    <%= f.input :download_speed %>
    <%= f.input :remove %>
    <%= f.input :price_surcharges1 %>
    <%= f.input :price_surcharges2 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
